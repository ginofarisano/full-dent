<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ListView
        android:id="@+id/listViewStorico"
        android:background="#f3f3f3"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutIntervallo" >

    </ListView>

    <LinearLayout
        android:id="@+id/linearLayoutIntervallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edtTxtDa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#5A7E90"
            android:ems="10"
            android:hint="gg-mm-aaaa"
            android:inputType="date" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edtTxtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#5A7E90"
            android:hint="gg-mm-aaaa"
            android:ems="10"
            android:inputType="date" />
      
    </LinearLayout>

   

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#5A7E90"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Inserisci l&apos;intervallo di date:" />

    <Button
        android:id="@+id/btnCerca"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayoutIntervallo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/entra"
        android:text="Cerca!"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

</RelativeLayout>